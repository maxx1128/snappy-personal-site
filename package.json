{
  "name": "SnappyPersonalSite",
  "version": "2.0.0",
  "main": "index.html",
  "repository": "Personal Website built on Jekyll, Tailwind, and Turbolinks",
  "contributors": [
    "maxx1128 <maxx1128@gmail.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.0.1",
    "postcss": "^6.0.22",
    "postcss-loader": "^2.1.5",
    "turbolinks": "^5.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "chokidar-cli": "^1.2.2",
    "concurrently": "^3.5.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "purgecss": "^1.4.1"
  },
  "scripts": {
    "dev": "npm-run-all -p write sass:dev",
    "prod": "npm-run-all -p build sass:prod",

    "write": "jekyll serve --incremental --watch",
    "build": "jekyll build",

    "sass:dev": "npm-run-all -p sass sass-dev:*",
    "sass:prod": "npm-run-all -p sass sass-prod:*",
    "sass": "node-sass --output-style compressed _sass/ -o assets/css",
    "sass-dev:watch": "chokidar '_sass/**/**/**/*.scss' -c 'npm run sass'",
    "sass-prod:autoprefixer": "postcss assets/css/*.css --use autoprefixer --no-map -d assets/css",
    "sass-prod:purgecss": "purgecss --css assets/css/*.css --content _site/**/**/*.html --out assets/css"
  }
}
